{
  "name": "capstone-cerver-taskly",
  "version": "1.0.0",
  "description": "Express server for capstone",
  "main": "index.js",
  "scripts": {
    "start:app": "NODE_ENV=development nodemon server/index.js",
    "postinstall": "docker-compose exec -w /backend-app app npm install || true",
    "start": "docker-compose up",
    "build": "docker-compose up --build",
    "prune": "docker-compose down -v",
    "stop": "docker-compose down",
    "test:app": "NODE_ENV=test jest --noStackTrace --forceExit --detectOpenHandles",
    "test": "docker exec -t -w /backend-app node-app npm run test:app",
    "reset": "docker-compose up -d && npm install && npm run stop && npm run build"
  },
  "author": "Ninos,Ali,Elaf,Merah,Ahmed AL-Essam",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.18.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.7",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.1.1",
    "mocha-steps": "^1.3.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6"
  }
}
